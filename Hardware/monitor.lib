%IFNDEF __MONITOR_LIB__
%DEFINE __MONITOR_LIB__

; --------------------------------------------------------
; Variáveis principais
NameSystem db "MartinsOS", 0

; --------------------------------------------------------
; Monitor e configurações de janela
Count           dw 0000h
BackWidth       dw 0000h
BackHeight      dw 0000h
BackColor       db 46
Pagination      db 0
CursorX         db 15
CursorY         db 12
State           db 0

; --------------------------------------------------------
; Biblioteca de rotinas

; Rotina que defina o modo de video e configura a posição padrão
VGA.SetVideoMode:
    mov ah, 00h
    mov al, 13h
    int 10h
    mov ax, 320
    mov WORD[BackWidth], ax
    mov ax, 200
    mov WORD[BackHeight], ax
    call DrawPixelConfig
ret

; Função para gravar pixel na tela
DrawPixelConfig:
    mov ah, 0Ch
    mov al, [BackColor]
    mov cx, 0
    mov dx, 0
ret

; Rotina para pintar o funda da tela
DrawBackground:
    int 10h
    inc cx
    cmp cx, WORD[BackWidth]
    jne DrawBackground
    mov cx, 0
    inc dx
    cmp dx, WORD[BackHeight]
    jne DrawBackground
    mov dx, 0
ret

PrintString:
    mov ah, 09h
    mov bh, [Pagination]
    mov cx, 1
    mov al, [si]
    print:
        int 10h
        inc si
        call MoveCursor
        mov ah, 09h
        mov al, [si]
        cmp al, 0
        jne print
ret

MoveCursor:
    mov ah, 02h
    mov bh, [Pagination]
    inc dl
    int 10h
ret

EffectInit:
    mov bl, 44 ; Cor é 44
    start:
        mov dh, [CursorY]
        mov dl, [CursorX]
        call MoveCursor
        mov si, NameSystem
        call PrintString
        pusha
        mov bl, [State]
        cmp bl, 0
        je Increment
        jmp Decrement
    Increment:
        popa
        inc bl
        call Waiting
        cmp bl, 50 ; Cor é 50
        jne start
        pusha
        mov bl, 1
        mov byte[State], si
        popa
        jmp start
    Decrement:
        popa
        dec bl
        call Waiting
        cmp bl, 44
        jne start
        pusha
        mov bl, 0
        mov byte[State], bl
        mov bx, [Count]
        inc bx
        mov WORD[Count], bx
        cmp bx, 5000 ;  Mudar para 50 => Colocar para executar na Maquina Virtual
        jne ReturnLoop
        jmp ReturnProg
    ReturnLoop:
        popa
        jmp start
    ReturnProg:
        popa
        ret
ret

Waiting:
    pusha
    mov ah, 86h
    mov cs, 0002h
    mov dx, 49F0h
    int 15h
ret

%ENDIF
